#include "sun8i-h3-nanopi-neo-core.dtsi"
#include <dt-bindings/input/input.h>

/ {
	model = "V4 Smart Hub";
	compatible = "moixa,v4-smart-hub",
		     "friendlyarm,nanopi-neo-core",
		     "allwinner,sun8i-h3";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial3 = &uart3;
		ethernet0 = &emac;
		i2c0 = &i2c0;
		watchdog0 = &ext_wdt;
		watchdog1 = &wdt0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&pio 0 21 GPIO_ACTIVE_HIGH>;
		default-on;
	};

	keys {
		compatible = "gpio-keys";
		interrupt-parent = <&pio>;

		key1 {
			label = "F1";
			linux,code = <KEY_F1>;
			gpio = <&pio 0 2 GPIO_ACTIVE_HIGH>;
			interrupts = <0 2 IRQ_TYPE_EDGE_RISING>;
		};

		key2 {
			label = "F2";
			linux,code = <KEY_F2>;
			gpio = <&pio 0 3 GPIO_ACTIVE_HIGH>;
			interrupts = <0 3 IRQ_TYPE_EDGE_RISING>;
		};

		key3 {
			label = "F3";
			linux,code = <KEY_F3>;
			gpio = <&pio 6 8 GPIO_ACTIVE_HIGH>;
			interrupts = <6 8 IRQ_TYPE_EDGE_RISING>;
		};
	};

	ext_wdt: watchdog {
		compatible = "linux,wdt-gpio";
		gpios = <&r_pio 0 11 GPIO_ACTIVE_HIGH>;
		hw_algo = "toggle";
		hw_margin_ms = <30000>;
		always-running;
	};
};

&i2c0 {
	status = "okay";

	eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <16>;
		read-only;
	};

	rtc1: pcf8523@68 {
		compatible = "nxp,pcf8523";
		status = "okay";
		reg = <0x68>;
	};
};

&emac {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&ehci3 {
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pins_a>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>;
	status = "okay";
};

&spi0 {
	status = "okay";
	cs-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>, <&pio 0 6 GPIO_ACTIVE_HIGH>;
	num-cs = <2>;

	panel@0 {
		compatible = "sitronix,st7789v";
		reg = <0>;
		reset-gpios = <&pio 6 11 GPIO_ACTIVE_LOW>;
		backlight = <&backlight>;
		spi-max-frequency = <50000000>;
		spi-cpol;
		spi-cpha;
	};

	touchscreen@1 {
		compatible = "ti,ads7846";
		reg = <1>;
		spi-max-frequency = <2000000>;
		interrupt-parent = <&pio>;
		interrupts = <6 9 IRQ_TYPE_EDGE_FALLING>;
		pendown-gpio = <&pio 6 9 GPIO_ACTIVE_LOW>;
		vcc-supply = <&reg_vcc3v3>;
	};
};
